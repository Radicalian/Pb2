<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_pressed">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:clickable="true">

        <TextView
            android:text="@string/website3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView31"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textColorLink="@android:color/holo_blue_light"
            android:autoLink="web"
            android:layout_marginTop="89dp"
            android:layout_below="@+id/imageView65"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:text="For Fund Transfer Try our new Financial Mobile Bank App by clicking on the link given below"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView30"
            android:textStyle="normal|bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/textView31"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="101dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pb6"
            android:id="@+id/imageView65"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</ScrollView>