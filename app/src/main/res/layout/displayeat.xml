<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_default">

        <TextView
            android:text="PURVANCHAL BANK   ISSUE  RuPay-DEBIT CARD  TO ITS CUSTOMER IN THE YEAR OF  2014. THE GRAPH GIVEN BELOW REPRESENTS HOW YEAR BY YEAR  TRANSACTION THROUGH ATM  INCREASES RAPIDALLY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textStyle="bold"
            android:layout_below="@+id/t1"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="92dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/atmr"
            android:id="@+id/imageView59"
            android:layout_below="@+id/textView18"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANY COMPLAIN REGARDING ATM PLEASE CALL ON TOLL FREE NO @1800-3000-0620"

android:layout_below="@+id/imageView59"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_marginBottom="11dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/textView23"
            android:autoLink="phone"
            android:textColorLink="@android:color/holo_green_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benefits of RuPay Card"


            android:textSize="23sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_orange_dark"
             android:layout_below="@+id/textView23"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="52dp"
            android:id="@+id/textView24"/>

        <TextView
            android:text="@string/textView27"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"

            android:layout_width="wrap_content"
            android:layout_below="@+id/textView24"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RUPAY-DEBIT CARD"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:background="@android:color/holo_green_light"
            android:textSize="24sp"
            android:id="@+id/t1"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp" />


    </RelativeLayout>

</ScrollView>