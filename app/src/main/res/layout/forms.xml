            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView06"
            android:onClick="onTextView06"
            android:textSize="16sp"
            android:textStyle="bold|normal"
            android:text="-> MSME LOAN APPLICATION "
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/textView05"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView07"
            android:onClick="onTextView07"
            android:textSize="16sp"
            android:textStyle="bold|normal"
            android:text="-> MOBILE BANKING SERVICES REGISTRATION FORM "
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/textView06"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView08"
            android:onClick="onTextView08"
            android:textSize="16sp"
            android:textStyle="bold|normal"
            android:text="-> MISSED CALL REQUEST APPLICATION FORM "
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/textView07"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView09"
            android:onClick="onTextView09"
            android:textSize="16sp"
            android:textStyle="bold|normal"
            android:text="-> NEFT/RTGS APPLICATION FORM "
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/textView08"
